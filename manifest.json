{
  "manifest_version": 3,
  "name": "Zetamac Score Tracker",
  "version": "1.0",
  "description": "Track and visualize your Zetamac arithmetic game scores",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://arithmetic.zetamac.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://arithmetic.zetamac.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Zetamac Tracker"
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
